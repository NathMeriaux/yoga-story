
<section class="blog">
  <div class="container text-center">
    <h3>Purchase of lesson <%= @booking.lesson_sku %></h3>
  <div class="row">
    <div id="owl-news">
      <div class="col-md-4 col-md-offset-4">
        <div class="item">
          <%= cl_image_tag @booking.lesson.photo %>
          <h3 class="home"><a href='#'><%= @booking.lesson.name %></a></h3>
            <ul class="list-inline">
              <li><a href="#"><i class="ti-user"></i> By Admin</a></li>
              <li><a href="#"><i class="ti-comments"></i> 4 Comments</a></li>
              <li><i class="ti-calendar"></i><%= @booking.lesson.start_date.strftime("%d/%M/%Y - %Hh%M") %></li>
            </ul>

              <%= form_tag booking_payments_path(@booking) do %>
                <article>
                  <label class="amount">
                    <span>Amount: <%= humanized_money_with_symbol(@booking.amount) %></span>
                  </label>
                </article>

                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-email="<%= current_user.email %>"
                  data-description="Lesson <%= @booking.lesson_sku %>"
                  data-amount="<%= @booking.amount_cents %>"
                  data-currency="EUR"></script>

              <% end %>
        </div>
      </div>
    </div>
  </div>



</div>
</section>
