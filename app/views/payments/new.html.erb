<section id="home" class="home-newsletter">
    <div class="row no-margin">
        <div class="col-sm-12 center-title">
            <h2><i class="fa fa-usd"></i> <%= t('.pay') %></h2>
        </div>
    </div>
</section>

<section class="blog">
  <div class="container text-center">
    <h3><%= @booking.lesson_sku %></h3>
  <div class="row">
    <div id="owl-news">
      <div class="col-md-4 col-md-offset-4">
        <div class="item" id="payment">
          <%= cl_image_tag @booking.lesson.photo %>
          <h3 class="home"><a href='#'><%= @booking.lesson.name %></a></h3>
              <ul class="list-inline">
                <li class="ti-user"><a href="#"><i class="ti-user"></i> By &nbsp;<%= @booking.lesson.teacher.first_name %></a></li>
                <li><i class="ti-calendar"></i><%= @booking.lesson.start_date.to_time.to_formatted_s(:short) %></li>
              </ul>

              <%= form_tag booking_payments_path(@booking) do %>
                <article>
                  <label class="amount">
                    <h4 class="red"><%= t('.amount') %> : <%= humanized_money_with_symbol(@booking.amount) %></h4>
                  </label>
                </article>

                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-email="<%= current_user.email %>"
                  data-description="Lesson <%= @booking.lesson_sku %>"
                  data-amount="<%= @booking.amount_cents %>"
                  data-currency="EUR"></script>

              <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
</section>
