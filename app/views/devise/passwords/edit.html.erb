<section id="home" class="home-newsletter">
    <div class="row no-margin">
        <div class="col-sm-12 center-title">
            <h2><i class="fa fa-user"></i> <%= t('.change_your_password', :default => 'Change your password') %> %></h2>
        </div>
    </div>
</section>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="contact-home-form">

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div><%= f.label :password, t('.new_password', :default => 'New password') %><br />
          <%= f.password_field :password %></div>

          <div><%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirm new password') %><br />
          <%= f.password_field :password_confirmation %></div>

          <div><%= f.submit t('.change_my_password', :default => 'Change my password'), class:"btn btn-skin btn-radius" %></div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

