<div class="col-md-10 col-md-offset-1">
  <h2>Détails du cours</h2>
  <div class="row">
    <div id="owl-news">
      <div class="col-md-4">

        <div class="item">
          <%= cl_image_tag @lesson.photo %>
          <h3 class="home text-center red"><%= @lesson.name %></h3>
            <ul class="list-inline">
              <li><a href="#"><i class="ti-user"></i> By Admin</a></li>
              <li><a href="#"><i class="ti-comments"></i> 4 Comments</a></li>

            </ul>
            <%= @lesson.teacher.photo %>

        </div>
      </div>
      <div class="col-md-6">
        <h4>Informations supplémentaires</h4>

        <blockquote class="w3-container w3-leftbar w3-light-grey">

          <div class="list-group">
            <h6 class="list-group-item"> <i class="fa fa-calendar fa-lg red"></i>&nbsp; <%= @lesson.start_date %></h6>
            <h6 class="list-group-item"><span class="red">Nombre de places : </span><%= @lesson.max_students %></h6>
            <h6 class="list-group-item"><i class="fa fa-spinner fa-pulse fa-lg fa-fw red"></i>&nbsp; <%= @lesson.hours %> heures <% if @lesson.minutes != 0 %> <%= @lesson.minutes %> minutes <br> <% end %></h6>

            <h6 class="list-group-item"><i class="fa fa-map-marker lg red"></i>&nbsp; <%= @lesson.location_name %>
            <%= @lesson.street_number %><%= @lesson.address %>
            <%= @lesson.zip_code %><%= @lesson.city %>
            </h6>
            <h6 class="list-group-item"><i class="fa fa-money fa-lg red" aria-hidden="true"></i>&nbsp; <%= humanized_money_with_symbol(@lesson.price) %></h6>


            <h6 class="list-group-item"><span class="red">Description : </span><%= @lesson.description %></h6>
            <span>
            <% if @lesson.teacher == current_user %>
              <%= t('.user_cannot_be_teacher') %>
              <% else %>
              <%= form_tag lesson_bookings_path @lesson do %>
                <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
                <% end %>
            <% end %>
          </span>
        </div>
      </blockquote>
      </div>
    </div>
  </div>
</div>



<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @marker.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(14);
      });
    })
  <% end %>
<% end %>
