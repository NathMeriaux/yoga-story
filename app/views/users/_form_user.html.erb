<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :birth_date, as: :date, start_year: Date.today.year - 90,
                             end_year: Date.today.year - 8,
                             order: [:day, :month, :year], :default => {:year => 1980 } %>
  <%= f.input :gender, collection: [:male, :female]%>
  <%= f.input :phone %>
  <%= f.input :yoga_type, as: :check_boxes, collection: ['Ashtanga Vinyasa Yoga', 'Iyengar Yoga', 'Vinyasa Yoga', 'Hatha Yoga', 'Yoga Chamanique', 'Yin Yoga', 'Pranayama (respiration)'] %>
  <%= f.input :level, collection: [:beginner, :confirmed, :expert]%>
  <%= f.input :address, input_html: { id: 'user_input_autocomplete_address', placeholder: 'Start typing your address...' } %>
  <%= f.input :street_number, input_html: { id: 'street_number'} %>
  <%= f.input :street, input_html: { id: 'route'} %>
  <%= f.input :city, input_html: { id: 'locality'} %>
  <%= f.input :zipcode, input_html: { id: 'postal_code'} %>


  <% if @user.teacher? %>
    <%= f.input :experience %>
    <%= f.input :description %>
    <%= f.input :photos, as: :attachinary %>

  <% end %>

  <div class="text-center">
  <%= f.button :submit %></div>
<% end %>
