<section id="home" class="home-newsletter">
    <div class="row">
        <div class="col-sm-12 center-title"> 
          <h2><i class="fa fa-user"></i><%= t(".profile", default: "Profile") %></h2>
        </div>
    </div>
</section>

<section id="contact" class="contact-section">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 center-title">
        
        <div class="col-sm-4">
          <% unless @user.teacher? %>
          <%= link_to t('.become_teacher'), new_teacher_path, class:"btn btn-lg btn-skin btn-radius teacher" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3 center-title profil_avatar">
        <%= show_avatar %>
      </div>
      <div class="col-sm-6">
        <div class="wrapper-grey">
          <%= render 'form_user' %>
        </div>
      </div>
    </div>
    <div class="row">
        <% if @user.teacher? %>
        <div class="col-sm-2 col-sm-offset-3 center-title">
          <%= link_to t('.view_public_profile'), teacher_path(@user), class:"btn btn-lg btn-skin btn-radius" %>
        </div>
        <div class="col-sm-2 col-sm-offset-1 center-title">
          <%= link_to t('.my_lessons'), lessons_teacher_path(@user), class:"btn btn-lg btn-skin btn-radius" %>
        </div>
        <% end %>
    </div>
  </div>
</section>
