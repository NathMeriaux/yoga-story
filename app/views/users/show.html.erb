<div class="container">
  <h1 class="text-center">My profile</h1>
  <div class="row">
    <div class="col-xs-offset-2 col-xs-1">
      <%= image_tag @user.photo, class:"avatar avatar-large" %>
    </div>
    <div class="col-xs-6">
      <%= render 'form_user' %>
      <% if @user.teacher? %>
        <%= link_to t('.view_public_profile'), root_path %>
      <% else %>
        <%= link_to t('.become_teacher'), root_path %>
      <% end %>
    </div>
  </div>
</div>
